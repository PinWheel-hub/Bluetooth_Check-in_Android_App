<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D5D2D2"
    tools:context=".ChangeClassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <include layout="@layout/title_bar"/>
        <TextView
            android:id="@+id/tv_ct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请按需要修改课程信息："
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="24sp"/>

        <LinearLayout
            android:id="@+id/course_namec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="课程名称:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/class_namec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入课程名称"
                android:paddingRight="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_numc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="教务代码:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/class_numc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入教务代码"
                android:paddingRight="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_termc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="开课学期:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/class_termc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入开课学期"
                android:paddingRight="10dp"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/course_Bluetoothc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="蓝牙地址:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/class_bluetoothc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入蓝牙地址"
                android:paddingRight="10dp"
                android:textSize="15sp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_changeclassfinish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="修改完成"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_register"
            android:layout_below="@id/class_termc"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_rtwc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_below="@+id/btn_ccfinish" />
    </LinearLayout>

</ScrollView>
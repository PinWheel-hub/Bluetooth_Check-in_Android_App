<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72DED6F8"
    tools:context=".SChangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_bar"/>
        <TextView
            android:id="@+id/tv_sc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请修改您的个人信息(用户名/手机号不可更改)"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_scpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请修改密码"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/tv_sc"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_scpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:layout_below="@+id/tv_scpassword"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_password"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_sccollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请修改您所在的学校"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/et_scpassword"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_sccollege"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/bg_username"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tv_sccollege"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_scnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请修改您的学号"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/et_stcollege"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_scnumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:inputType="number"
            android:background="@drawable/bg_username"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tv_scnumber"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/tv_scname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请修改您的姓名"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_below="@+id/et_stnumber"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_scname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/bg_username"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/tv_scname"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/btn_scfinish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="我已完成信息修改"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_register"
            android:layout_below="@id/et_scname"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tv_rscw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_below="@+id/btn_scfinish"
            android:textSize="20sp"/>
        />
    </LinearLayout>
</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D5D2D2"
    tools:context=".CreateClassActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/tv_rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="老师您好！欢迎创建课程！"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="课程名称:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入课程名称"
            android:paddingRight="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/course_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="教务代码:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/class_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入教务代码"
            android:paddingRight="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/course_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="开课学期:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/class_term"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入开课学期"
            android:paddingRight="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tcbluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="蓝牙地址:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/class_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入蓝牙地址"
            android:paddingRight="10dp"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ccfinish"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="创建完成"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_register"
        android:layout_below="@id/class_term"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/course_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="平台生成的课程代码为:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/class_cid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

</ScrollView>


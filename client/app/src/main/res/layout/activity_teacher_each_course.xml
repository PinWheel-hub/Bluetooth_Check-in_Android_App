<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D5D2D2"
    tools:context=".TeacherEachCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="课程名称"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCName">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="课程代码"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCCode">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="任课教师"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCteacher">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="教务代码"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCnum">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:text="开课学期"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:padding="10dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCterm">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="本机蓝牙"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_gravity="center_vertical"
                android:id="@+id/KCBluetoothAddress">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_startsign"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#BC90ED"
                android:text="发起考勤"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_QueryKaoQin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#BC90ED"
                android:textColor="#FFFFFF"
                android:text="查询考勤信息"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_change_class"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="修改课程信息"
                android:background="#BC90ED"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_delete_class"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#E37360"
                android:textColor="#FFFFFF"
                android:text="删除课程信息"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_student_list"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="学生名单"
            android:background="#74ADE1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_blank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:paddingLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_below="@+id/btn_student_list"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>
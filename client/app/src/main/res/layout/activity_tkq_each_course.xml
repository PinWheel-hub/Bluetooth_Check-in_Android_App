<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TkqEachCourseActivity">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_unsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="  未签到学生的名单："
                android:textSize="18sp"
                android:textColor="#000000"/>

            <ListView
                android:id="@+id/listview_unsigned"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f6f6f6" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FFC673"
                android:text="刷新名单"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/btn_signed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="  已签到学生的名单："
                android:textSize="18sp"
                android:textColor="#000000"/>

            <ListView
                android:id="@+id/listview_signed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f6f6f6"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
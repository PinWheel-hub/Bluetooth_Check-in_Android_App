<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D4F3DF"
    android:padding="0dp"
    tools:context=".Logint">

    <include layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="老师您好！欢迎登录！"
        android:paddingLeft="10dp"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_username"
        android:hint="用户名"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_below="@+id/et_1"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <Button
        android:id="@+id/btn_logint"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="登录"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_login"
        android:layout_below="@id/et_2"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btn_registert"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="没有账号？请先注册"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_register"
        android:layout_below="@id/btn_logint"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>